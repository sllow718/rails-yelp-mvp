<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Rating</th>
      <th>Content</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.rating %></td>
        <td><%= review.content %></td>
        <td><%= review.restaurant_id %></td>
        <td><%= link_to 'Show', review ,
      class: "btn btn-warning", style: "color:white;"%></td>
        <td><%= link_to 'Edit', edit_review_path(review) ,
      class: "btn btn-warning", style: "color:white;"%></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' },
      class: "btn btn-warning", style: "color:white;" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_restaurant_review_path ,
      class: "btn btn-warning", style: "color:white;"%>
